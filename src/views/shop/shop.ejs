<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../../css/index.css">
    <title>Shop | Funkoshop</title>
</head>
<body>
	<%- include('../partials/header') %>
		<div class="container-shop container">	
			<aside class="aside__container">
				<div>
					<p class="filter__title">BUSCAR</p>
					<select class="filter__input__search" type="search" name="BUSCADOR" id="" placeholder="item o categoria">
						<% category.forEach( cate => {%>
							<option value="<%= cate.category_id %>"><%= cate.category_name %></option> 
						<% }); %> 
						<% licence.forEach( lice => {%>
							<option value="<%= lice.licence_id %>" ><%= lice.licence_name %></option> 
						<% }); %> 
					</select>	
				</div>
				<div>
					<p class="filter__title">ORDENAR POR</p>
					<select class="filter__input__select" name="" id="" placeholder="Mayor a menor">
						<option> A - Z</option>
						<option> Z - A</option>
						<option> Menor Precio</option>
						<option> Mayor Precio</option>

					</select>
				</div>     
				<div>
					<p class="filter__title">PRECIO</p>
					<div class="filter__price__container">
						<p class="filter__text">MIN:</p> <input class="filter__input" type="number" min="1" max="100">              
						<p class="filter__text">MAX:</p> <input class="filter__input" type="number" min="1" max="100">
					</div>                       
				</div>
				<div>
						<p class="filter__title">FILTRAR</p>
						<div class="filter__filter">
								<div class="filter__filter__checkbox">
										<input  type="checkbox" name="NUEVOS" id="">
										<p class="filter__text">NUEVOS</p> 
								</div>
								<div class="filter__filter__checkbox">
										<input  type="checkbox" name="OFERTAS" id="">
										<p class="filter__text">OFERTAS</p> 
								</div>
								<div class="filter__filter__checkbox">
										<input  type="checkbox" name="EDICIÓN ESPECIAL" id="">
										<p class="filter__text">EDICIÓN ESPECIAL</p> 
								</div>
								<div class="filter__filter__checkbox">
										<input  type="checkbox" name="FAVORITOS" id="">
										<p class="filter__text">FAVORITOS</p> 
								</div>
						</div>
				</div>

	</aside>
		<main class="main-container">
			<section class="slider" >
				<% data.forEach(item => { %>
					<article>
						<a  class="card-item__link" href="/shop/item/<%= item.product_id %>">
							<picture class="card-item__cover">
								<span class="card-item__tag">Nuevo</span>
								<img class="card-item__img--front" src="<%= item.image_front %>" alt="">
								<img class="card-item__img--back" src="<%= item.image_back %>" alt="">
							</picture>
							<div class="card-item__content">
								<p class="card-item__licence"><%= item.licence_name %></p>
								<h4 class="card-item__name"><%= item.product_name %></h4>
								<p class="card-item__price"><%= item.price %></p>
								<p class="card-item__promo">3 CUOTAS SIN INTERÉS HOLA</p>
							</div>
						</a>  
					</article>
				<% }); %>
			</section>
		</main>
	</div>   
	<%- include('../partials/footer') %>
	<script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>
</html>